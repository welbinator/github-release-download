{
    "name": "welbinator/remote-download",
    "description": "WordPress plugin for remote downloads from GitHub and WordPress.org",
    "type": "wordpress-plugin",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.10",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress --extensions=php --colors .",
        "phpcbf": "phpcbf --standard=WordPress --extensions=php .",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "check": [
            "@phpcs",
            "@phpstan"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
