<?xml version="1.0"?>
<ruleset name="Remote Download">
    <description>WordPress Coding Standards for Remote Download Plugin</description>

    <!-- Check all PHP files in directory tree by default. -->
    <arg name="extensions" value="php"/>
    <file>.</file>

    <!-- Show progress and sniff codes in all reports -->
    <arg value="ps"/>
    <arg name="colors"/>

    <!-- Exclude paths -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>composer.json</exclude-pattern>
    <exclude-pattern>composer.lock</exclude-pattern>
    <exclude-pattern>package*.json</exclude-pattern>

    <!-- Use WordPress ruleset -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Allow empty lines after opening brace -->
        <exclude name="Squiz.WhiteSpace.FunctionOpeningBraceSpace.SpacingAfter"/>
        
        <!-- Allow grd prefix - established public API -->
        <exclude name="WordPress.NamingConventions.PrefixAllGlobals.ShortPrefixPassed"/>
    </rule>

    <!-- Check for PHP cross-version compatibility. -->
    <config name="testVersion" value="7.4-"/>
    <rule ref="PHPCompatibilityWP"/>

    <!-- WordPress Core additional standards -->
    <rule ref="WordPress-Core"/>
    <rule ref="WordPress-Extra"/>
    <rule ref="WordPress-Docs"/>

    <!-- Verify that everything in the global namespace is prefixed -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="remote_download"/>
                <element value="grd"/>
                <element value="wprd"/>
            </property>
        </properties>
    </rule>

    <!-- Allow for theme specific exceptions to the file name rules -->
    <rule ref="WordPress.Files.FileName">
        <properties>
            <property name="strict_class_file_names" value="false"/>
        </properties>
    </rule>

    <!-- Set minimum supported WordPress version -->
    <config name="minimum_supported_wp_version" value="6.7"/>
</ruleset>
